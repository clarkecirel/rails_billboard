<h1><%= @artist.id ? 'Edit Artist' : 'Create Artist' %></h1>
<hr />

<%= form_with(model: [@billboard, @artist], local: true, class: 'ui form') do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name, required: true, autofocus: true %>
  <br />
  <%= f.label :genre %>
  <%= f.text_field :genre, required: true, autofocus: true %>
  <br />
  <%= f.label :bio %>
  <%= f.text_area :bio, required: false, autofocus: true %>
  <br />

  <%= f.submit nil, class: 'ui button' %>
  <% end %>